            "hidev\\tests\\": "tests"
        }
    },
    "bin": [
        "bin/hidev"
    ],
    "extra": {
        "config-plugin": {
            "hidev": ["$console", "config/hidev.php"],
            "tests": "config/tests.php"
        }
